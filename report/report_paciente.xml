<odoo>

    <template id="report_paciente">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">    
                 <t t-call="web.external_layout">             
                    <div class="page">
                                                   
                        <h2>
                            Paciente <span t-field="o.name"/>
                        </h2>                                                   
                         <table class="table table-striped table-sm table-bordered">
                            <thead>
                                    <tr>
                                        <th>Nombre del Campo</th>
                                        <th>Datos</th>                                        
                                    </tr>                                    
                            </thead> 
                            <tbody>
                                <tr>                                    
                                    <td><strong> Codigo </strong></td>
                                    <td><span t-esc="o.name"/>  </td>                                    
                                </tr>    
                                <tr>                                    
                                    <td><strong> Nombre </strong></td>
                                    <td><span t-esc="o.nombre"/>  </td>                                    
                                </tr>
                                <tr>                                    
                                    <td><strong> Apellido </strong></td>
                                    <td><span t-esc="o.apellido"/>  </td>                                    
                                </tr>
                                <tr>                                    
                                    <td><strong> DNI </strong></td>
                                    <td><span t-esc="o.dni"/>  </td>                                    
                                </tr>
                                <tr>                                    
                                    <td><strong> Estado </strong></td>
                                    <td><span t-esc="o.estado"/>  </td>                                    
                                </tr>                                
                                <tr>                                    
                                    <td><strong> Tratamiento </strong></td>
                                    <td><span t-esc="o.tratamiento_id.nombre_tratamiento"/>  </td>                                    
                                </tr>
                            </tbody>    
                        </table>


